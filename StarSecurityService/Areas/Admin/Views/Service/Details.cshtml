@model StarSecurityService.Models.Service

@{
    ViewData["Title"] = "Service Details";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="container" style="padding-top: 100px;  min-height: 80vh">
    <div class="row">
        <div class="col-md-12">
            <h1>Service Detail</h1>
        </div>
    </div>
    <hr />
    <div class="row">
        <div class="col-md-12">
            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayNameFor(model => model.ServiceId)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.ServiceId)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.ServiceName)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.ServiceName)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.Price)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Price)
                </dd>
                <dt>
                    Thumbnail
                </dt>
                <dd>
                    <img src="@("~/ClientAssets/image/" + Model.Image)" asp-append-version="true" width="200" height="150px" />
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.Description)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Description)
                </dd>
            </dl>
        </div>
        <div>
            <a asp-action="Edit" asp-route-id="@Model.ServiceId">Edit</a> |
            <a asp-action="Index">Back to List</a>
        </div>
    </div>
</div>
