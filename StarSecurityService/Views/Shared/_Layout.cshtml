<body>
    <div class="overlay1"></div>
    <div class="overlay"></div>
    <!-- Notification  -->
    <div class="notice">
        <div class="noticeItem address">
            <i class="icon fa-solid fa-location-dot"></i>8A, Ton That Thuyet, My Dinh, Ha Noi
        </div>
        <div class="noticeItem mail"><i class="icon fa-solid fa-envelope"></i>starsercurityservice4.0@gmail.com</div>
        <div class="noticeItem phone"><i class="icon fa-solid fa-phone"></i>+84 923 128 888</div>
        <div class="noticeItem fb-icon"><i class="icon fa-brands fa-facebook-f"></i></div>
    </div>
    <!-- End Notification  -->
    <!-- Form Display  -->
    <div id="formDisplay">
        <div class="formDisplay--title">
            <h3>Contact us</h3>
        </div>
        <div class="formDisplay--description">
            <strong>
                Please enter correct information, we'll contact you in the earliest
                time
            </strong>
        </div>
        <form id="formDisplay--form">
            <input id="name" type="text" placeholder="Enter your full name">
            <input id="phone" type="text" placeholder="Enter your phone number">
            <button type="submit" id="sendInfoBtn">Send information</button>
        </form>
    </div>
    <!-- End form  -->
    <!-- Header Start  -->
    <header>
        <div class="navBar">
            <div class="navBar-icon-responsive">
                <a id="barsBtn"><i class="fa-solid fa-bars"></i></a>
            </div>
            <div class="logo">
                <a asp-action="Index" asp-controller="Home"><img src="~/ClientAssets/image/logo-1.png" width="48px" alt="logo"></a>
            </div>
            <div class="navBar-details">
                <div class="navBar-details--closeButton">
                    <a id="closeBtn"><i class="fa-solid fa-xmark"></i></a>
                </div>
                <div class="active navBar-item navBar-home"><a asp-action="Index" asp-controller="Home">HOME</a></div>
                <div class="navBar-item navBar-intro"><a href="#">ABOUT US</a></div>
                <div class="navBar-item navBar-training"><a asp-action="Index" asp-controller="Service">SERVICE</a></div>
                <div class="navBar-item navBar-recruitment"><a href="#">RECRUITMENT</a></div>
                <div class="navBar-item navBar-news"><a href="#">NEWS</a></div>
                <div class="navBar-item navBar-contact"><a href="#">CONTACT</a></div>
                <div id="contact" class="navBar-item navBar-phone">HOTLINE +84 923 128 888</div>
                <div class="navBar-item navBar-searchIcon"><i class="fa-solid fa-magnifying-glass"></i></div>
               
                        @if (mySessionObject == null)
                        {
                    <div class="navBar-item navBar-phone"><a asp-action="Login" asp-controller="Accounts" asp-area="">LOG IN</a></div>
                            <div class="navBar-item navBar-phone"><a asp-action="Register" asp-controller="Accounts" asp-area="">SIGN UP</a></div>
                           
                               
                        }
                        else
                        {
                            <div class="navBar-item">
                                <p>Hi, @mySessionObject.UserFirstName.ToString() @mySessionObject.UserLastName.ToString()</p>
                            </div>
                            <div class="navBar-item">
                                <a asp-action="Logout" asp-controller="Accounts" asp-area="">Logout</a>
                            </div>
                           
                        }
            </div>
        </div>
    </header>
    <!-- Header End -->


    @RenderBody()


