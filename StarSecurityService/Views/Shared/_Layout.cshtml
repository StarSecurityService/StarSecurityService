@using Microsoft.AspNetCore.Http
@using StarSecurityService.Extentions;
@inject IHttpContextAccessor HttpContextAccessor
@{
    //Get object from session
    var mySessionObject = HttpContextAccessor.HttpContext.Session.GetObjectFromJson<UserSession>("UserDetails");
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Star Security Service Company</title>
    <link rel="shortcut icon" type="image/icon" href="~/ClientAssets/image/logo-1.png" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.3.0/css/all.min.css">
    <link rel="stylesheet" href="~/ClientAssets/owl-carousel/owl.carousel.min.css">
    <link rel="stylesheet" href="~/ClientAssets/style/home.css">
    <link rel="stylesheet" href="~/ClientAssets/style/foot-head.css">
    <link rel="stylesheet" href="~/ClientAssets/style/service.css">
